---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section id={id} class="history-section">
  <slot />
</section>

<style>
  .history-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    margin: 0 auto;
    width: min(calc(var(--max-width) + 4rem), 100%);
    height: 100dvh;
    overflow-x: scroll;
    margin-bottom: 2rem;
    /* background: url(/public/step_img_06.png) no-repeat center / cover; */
  }
</style>

<style is:global>
  .history-section > p {
    font-family: var(--font-display);
    font-size: calc(15vw + 1rem);
    font-weight: 600;
    line-height: 1.25;
    text-transform: uppercase;
    white-space: nowrap;
  }

  .history-section > p.start {
    text-align: start;
  }

  .history-section > p.center {
    text-align: center;
  }

  .history-section > p.end {
    text-align: end;
  }

  .history-section > p > span {
    color: var(--primary-300);
  }
</style>
