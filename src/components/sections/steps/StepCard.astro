---
import { Image } from "astro:assets";

interface Props {
  index: number;
  position: "left" | "right";
  image: {
    url: string;
    alt: string;
  };
}

const { position, image } = Astro.props;
---

<article class={`step-card step-card-${position}`}>
  <Image src={image.url} alt={image.alt} width={100} height={100} loading="lazy" decoding="async" />
</article>

<style>
  .step-card {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    width: 500px;
    height: 350px;
  }

  .step-card-left {
    right: 0;
  }

  .step-card-right {
    left: 0;
  }

  .step-card > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
