---
import NewsletterForm from "@components/sections/newsletter/NewsletterForm.astro";
import Corners from "@components/sections/hero/Corners.astro";
---

<section id="hero" class="hero">
  <video autoplay muted loop playsinline aria-hidden="true" tabindex="-1" poster="/hero_img.png">
    <source src="/video.mp4" />
  </video>
  <article>
    <h2 id="hero-title-cheese" class="cheese__title">Queso</h2>
    <h2 id="hero-title-pork-rinds" class="pork__rinds-title">Chicharrones</h2>
    <NewsletterForm />
  </article>
  <Corners />
</section>

<style>
  .hero {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: end;
    width: 100%;
    min-height: 100dvh;
    overflow: clip;
  }

  .hero > video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.5);
  }

  .hero > article {
    align-self: center;
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-template-rows: repeat(2, 1fr) auto;
    grid-template-areas:
      ". cheese . . . . . ."
      ". cheese . . form form form ."
      "pork-rinds pork-rinds pork-rinds pork-rinds pork-rinds pork-rinds pork-rinds pork-rinds";
    gap: 1rem;
    padding: 4rem;
    z-index: 1;
  }

  .hero > article > .pork__rinds-title {
    line-height: 1;
  }

  .hero > article > .pork__rinds-title {
    grid-area: pork-rinds;
    font-size: var(--text-hero-large);
    text-align: center;
    animation: slideInUp var(--slide-in-delay) ease-in-out;
  }

  .hero > article > .cheese__title {
    align-content: center;
    grid-area: cheese;
    writing-mode: sideways-lr;
    color: var(--primary-400);
    font-size: var(--text-hero-small);
    animation: slideInRight var(--slide-in-delay) ease-in-out;
  }

  @keyframes slideInRight {
    from {
      transform: translateX(-700px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideInUp {
    from {
      transform: translateY(700px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>
