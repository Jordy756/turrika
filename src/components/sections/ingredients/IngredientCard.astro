---
import { Image } from "astro:assets";

interface Props {
  index: string;
  image: {
    url: string;
    alt: string;
  };
  name: string;
  description: string;
  quantity: string;
}

const { index, image, name, description, quantity } = Astro.props;
---

<article class="ingredient__card">
  <aside>{index.padStart(2, "0")}</aside>
  <div>
    <header>
      <h3>{name}</h3>
      <h4>{quantity}</h4>
    </header>
    <section>
      <p>{description}</p>
      <figure>
        <Image src={image.url} alt={image.alt} width={100} height={100} />
      </figure>
    </section>
  </div>
</article>

<style>
  .ingredient__card {
    display: flex;
    gap: 5rem;
    padding: 5rem;
    min-height: 100dvh;
  }

  .ingredient__card > aside {
    padding-block: 1.5rem;
  }

  .ingredient__card > div {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .ingredient__card > div > header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .ingredient__card > div > header > h3 {
    font-size: var(--text-display-medium);
    color: var(--primary-100);
  }

  .ingredient__card > div > header > h4 {
    font-size: var(--text-heading-medium);
    font-weight: 400;
    opacity: 0.9;
  }

  .ingredient__card > div > section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .ingredient__card > div > section > p {
    font-size: var(--text-body-large);
  }

  .ingredient__card > div > section > figure {
    max-width: 600px;
    width: 100%;
    aspect-ratio: 1;
    display: flex;
    animation: moveDown 1s ease-in-out infinite alternate;
  }

  .ingredient__card > div > section > figure > img {
    width: 100%;
    height: 100%;
  }

  @keyframes moveDown {
    from {
      transform: translateY(0);
    }
    to {
      transform: translateY(-5px);
    }
  }
</style>
